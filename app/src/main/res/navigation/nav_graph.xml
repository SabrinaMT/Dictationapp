    <fragment
        android:id="@+id/communityFragment"
        android:name="com.example.taicanlanguage.CommunityFragment"
        android:label="Community"
        tools:layout="@layout/fragment_community" />
    <activity
        android:id="@+id/quizFragment"
        android:name="com.example.taicanlanguage.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
    </activity>
    <activity
        android:id="@+id/quiz02Fragment"
        android:name="com.example.taicanlanguage.Quiz02Fragment"
        android:label="fragment_quiz02"
